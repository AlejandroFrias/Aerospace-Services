<% @notes.each_with_index do |note, i| %>
  <poi>
    <% note.attributes.each do |a| %>
      <% unless a.first == "id" %>
        <<%= a.first %>>
          <%= a.second %>
        </<%= a.first %>>
      <% end %>
    <% end %>
    <update_url>
      <%  up = note_url(note.attributes["id"]) %>
      <%  up["localhost"] = @SERVER_IP unless up["localhost"].nil? %>
      <%= up %>
    </update_url>
    <update_freq>
      10
    </update_freq>
    <edit_url>
      <%  edit = edit_note_url(note.attributes["id"]) %>
      <%  edit["localhost"] = @SERVER_IP unless edit["localhost"].nil? %>
      <%= edit %>
    </edit_url>
    <create_url>
      <%  create = new_note_url %>
      <%  create["localhost"] = @SERVER_IP unless create["localhost"].nil? %>
      <%= create %>
    </create_url>
    <delete_url>
      <%  delete = note_url(note.attributes["id"]) %>
      <%  delete["localhost"] = @SERVER_IP unless delete["localhost"].nil? %>
      <%= delete %>
    </delete_url>
  </poi>
<% end %>
